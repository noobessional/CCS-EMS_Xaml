<Window x:Class="testingSciChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <lvc:CartesianChart>
            <lvc:ColumnSeries Title="Sales" Values="5, 8, 12, 6, 10"/>
            <lvc:ColumnSeries Title="Expenses" Values="3, 6, 9, 4, 7"/>
            <lvc:Axis Name="SalesAxis" Title="Sales" LabelFormatter="{Binding Formatter}"/>
            <lvc:Axis Name="ExpensesAxis" Title="Expenses" LabelFormatter="{Binding Formatter}"/>
        </lvc:CartesianChart>
    </Grid>
</Window>
