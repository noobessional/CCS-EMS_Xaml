<Window x:Class="CCS_EMS.MERCH_VIEW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCS_EMS"
        mc:Ignorable="d"
        Title="MERCH_VIEW" Height="600" Width="700" WindowStartupLocation="CenterScreen" WindowStyle="None" BorderThickness="0" Background="Transparent" AllowsTransparency="True">
    <Grid>
        <Grid x:Name="MERCH_VIEW_PAN" Height="450" Width="700" Background="#EFEFEF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="20">
                <Image Source="/IMAGES/Default/tshirt-intrams-a.jpg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
            </Grid>
            <Grid Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10 15 10 5">
                        <StackPanel>
                            <TextBlock Text="Intrams Merch TShirt - B" FontSize="30" FontWeight="Bold" TextWrapping="Wrap"/>
                            <TextBlock Text="₱300.00" FontSize="17" FontWeight="Medium" Foreground="#FF9457"/>
                            <TextBlock Text="Size" FontWeight="Medium"/>
                            <ComboBox>
                                <ComboBoxItem Content="Small"/>
                                <ComboBoxItem Content="Medium"/>
                                <ComboBoxItem Content="Large"/>
                                <ComboBoxItem Content="X-Large"/>
                                <ComboBoxItem Content="2X-Large"/>
                            </ComboBox>
                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Details" Style="{StaticResource MERCH_BUTTON}" HorizontalAlignment="Stretch" Height="35" Margin="0 5 2.5 5"/>
                                <Button x:Name="MERCH_ACTION_BUTTON" Grid.Column="1" Content="• • •" Style="{StaticResource MERCH_BUTTON}" HorizontalAlignment="Stretch" Height="35" Margin="2.5 5 0 5" Click="MERCH_ACTION_BUTTON_Click"/>
                            </Grid>
                            <Button Content="Pay for Student" Style="{StaticResource MERCH_BUTTON}" HorizontalAlignment="Stretch" Height="35"/>
                            <TextBlock Text="This reservation ends in" FontSize="10" Margin="0 10 0 0" FontWeight="Medium"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="00" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Days" FontSize="8" Foreground="LightGray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text=":"/>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="00" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Hours" FontSize="8" Foreground="LightGray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="3" Text=":"/>
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="00" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Mins" FontSize="8" Foreground="LightGray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="5" Text=":"/>
                                <StackPanel Grid.Column="6">
                                    <TextBlock Text="00" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Secs" FontSize="8" Foreground="LightGray"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="Product Details" FontWeight="Medium" FontSize="15"/>
                            <TextBox Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam tincidunt convallis ligula, non dapibus leo. Duis vehicula lorem sit amet odio lacinia vestibulum. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Fusce eleifend eros et velit congue sodales. Aliquam erat volutpat. Donec eget eros vel nisi convallis efficitur. Curabitur accumsan purus sed neque congue, nec lobortis est convallis. Cras vel arcu varius, dapibus velit nec, tempor arcu. Fusce euismod justo id neque fermentum, id vestibulum nulla consequat. Aliquam in eros sed mi condimentum euismod. Integer in arcu libero. Phasellus non ligula urna. Sed auctor vestibulum turpis, eu rhoncus mauris eleifend non. Ut ultrices nunc in elit gravida, sed commodo sapien accumsan. Nam auctor, leo in vehicula gravida, justo eros sollicitudin magna, eget fermentum enim lacus non libero. Vivamus ut lectus purus. Sed lobortis nisi non efficitur suscipit. Sed vestibulum vel eros id fermentum.

In hac habitasse platea dictumst. Ut pellentesque placerat turpis. Nulla facilisi. Sed a massa nec lorem consequat viverra vel vel turpis. Integer auctor convallis purus, nec elementum eros ullamcorper et. Proin suscipit metus quis lorem lobortis vulputate. Cras nec libero ut nulla venenatis tristique. Phasellus consequat turpis quis nisi vulputate, id tempor tortor tempus. Vivamus sed rutrum felis. Duis vestibulum volutpat pulvinar. Phasellus aliquet, nunc nec pharetra ultricies, velit lectus luctus metus, sed sagittis tellus arcu id metus. Vivamus nec arcu nisl. Maecenas tempus dolor id eros iaculis lobortis. Curabitur euismod mauris vitae tortor auctor hendrerit. Etiam vulputate orci eu vestibulum ultrices. Vivamus eu libero auctor, convallis lectus in, dictum leo." TextWrapping="Wrap" HorizontalAlignment="Stretch" Height="Auto" Background="Transparent" BorderBrush="Transparent" Margin="0 5 0 0" FontSize="10" IsReadOnly="True" HorizontalContentAlignment="Stretch"/>
                        </StackPanel>
                        <Border x:Name="MENUS" Height="75" Width="100" Background="White" CornerRadius="10" BorderBrush="#925FE2" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 195" Visibility="Hidden">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Border x:Name="EDIT_BUTTON" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MouseEnter="EDIT_BUTTON_MouseEnter" Background="Transparent" CornerRadius="10 10 0 0" MouseLeave="EDIT_BUTTON_MouseLeave" MouseLeftButtonDown="EDIT_BUTTON_MouseLeftButtonDown">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0">
                                        <Icon:PackIconMaterial Kind="FileEdit" Width="15" Foreground="#925FE2" VerticalAlignment="Center"/>
                                        <TextBlock Text="Edit" FontSize="15" FontWeight="Medium" Foreground="#925FE2" Margin="10 0"/>
                                    </StackPanel>
                                </Border>
                                <Border x:Name="ARCHIVE_BUTTON" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Background="Transparent" CornerRadius="0 0 10 10" MouseEnter="ARCHIVE_BUTTON_MouseEnter" MouseLeave="ARCHIVE_BUTTON_MouseLeave">
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0">
                                        <Icon:PackIconMaterial Kind="Archive" Width="15" Foreground="#925FE2" VerticalAlignment="Center"/>
                                        <TextBlock Text="Archive" FontSize="15" FontWeight="Medium" Foreground="#925FE2" Margin="10 0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Grid x:Name="EDIT_PAN" Background="#EFEFEF" Visibility="Hidden">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Grid HorizontalAlignment="Stretch" Height="375">
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/IMAGES/Default/tshirt-intrams-a.jpg" Stretch="UniformToFill"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Border x:Name="UPLOAD_PICTURE_BUTTON" Width="50" Height="50" Background="#575757" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" CornerRadius="10">
                                <Icon:PackIconMaterial Kind="ImageEdit" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                        </Grid>
                        <Grid Margin="0 10">
                            <Border Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                <TextBox x:Name="EDIT_MERCH_NAME_TXT" Text="Enter your product name..." Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="10 0"/>
                            </Border>
                            <Border Width="60" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                <TextBlock Text="Product Name" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="₱" Foreground="#FF5B5B5B" FontWeight="Medium" FontSize="15" VerticalAlignment="Center" Padding="10 0 0 0"/>
                                        <TextBox x:Name="EDIT_PRICE_NAME_TXT" Text="Price" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" Padding="0 0 10 0" Width="145"/>
                                    </StackPanel>
                                </Border>
                                <Border Width="60" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                    <TextBlock Text="Product Name" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                    <TextBox x:Name="EDIT_STOCK_NAME_TXT" Text="700" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="10 0"/>
                                </Border>
                                <Border Width="60" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                    <TextBlock Text="Stocks(Limited)" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="CalendarEnd" Width="20" Height="20" Foreground="Gray" VerticalAlignment="Center" Margin="10 0"/>
                                        <TextBox x:Name="EDIT_END_DATE_NAME_TXT" Text="April 12, 2024" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0 0 10 0"/>
                                    </StackPanel>
                                </Border>
                                <Border Width="90" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                    <TextBlock Text="End Date (Reservation)" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="ClockEnd" Width="20" Height="20" Foreground="Gray" VerticalAlignment="Center" Margin="10 0"/>
                                        <TextBox x:Name="EDIT_END_TIME_NAME_TXT" Text="5:00 PM" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0 0 10 0"/>
                                    </StackPanel>
                                </Border>
                                <Border Width="90" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                    <TextBlock Text="End Time (Reservation)" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10 0 0 0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="175">
                            <StackPanel>
                                <TextBlock Text="Options" Foreground="#FF5B5B5B" FontSize="20" FontWeight="SemiBold"/>
                                <Grid Margin="0 10">
                                    <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                        <TextBox x:Name="EDIT_OPTION_NAME_TXT" Text="Size" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="10 0"/>
                                    </Border>
                                    <Border Width="60" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                        <TextBlock Text="Option Name" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <Grid Margin="10 10 0 0">
                                    <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="40">
                                        <TextBox x:Name="EDIT_OPTIONS_TXT" Text="Small" Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="10 0"/>
                                    </Border>
                                    <Border Width="60" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                        <TextBlock Text="Options" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid Margin="0 10">
                                <Border  Margin="10 10 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="300">
                                    <TextBox x:Name="EDIT_DETAILS_TXT" Text="Enter your product details..." Background="Transparent" BorderBrush="Transparent" Foreground="#FF5B5B5B" HorizontalAlignment="Stretch" Padding="10 10"/>
                                </Border>
                                <Border Width="70" Height="10" Background="#EFEFEF" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 5 0 0">
                                    <TextBlock Text="Product Details" Foreground="#FF5B5B5B" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="EDIT_MERCH_CANCEL_BUTTON" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Style="{StaticResource CANCEL_BUTTON}" Width="75" Height="30" Content="Cancel" Click="EDIT_MERCH_CANCEL_BUTTON_Click"/>
                            <Button x:Name="EDIT_MERCH_EDIT_BUTTON" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Style="{StaticResource LOGIN_BUTTON}" Width="75" Height="30" Content="Edit"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
